filebeat.inputs:
  - type: log
    enabled: true
    paths:
      - /var/lib/openvas/reports/*.xml
    fields:
      log_source: openvas
    fields_under_root: true
    
  - type: log
    enabled: true
    paths:
      - /usr/local/snort3/logs/*
    fields:
      log_source: snort
    fields_under_root: true

output.logstash:
  hosts: ["{{ logstash_host | default('siem.innovatech.internal') }}:5044"]

setup.template.enabled: false
setup.ilm.enabled: false
